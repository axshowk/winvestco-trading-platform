# ================================
# WINVESTCO Staging Environment
# ================================
# NEVER commit with real values!
# Use your CI/CD secrets management

# ================================
# Spring Profile
# ================================
SPRING_PROFILES_ACTIVE=staging

# ================================
# Database Configuration (REQUIRED)
# ================================
SPRING_DATASOURCE_URL=jdbc:postgresql://staging-db-host:5432/winvestco_db
SPRING_DATASOURCE_USERNAME=winvestco_app
SPRING_DATASOURCE_PASSWORD=<STAGING_DB_PASSWORD>

# ================================
# Eureka Configuration (REQUIRED)
# ================================
EUREKA_SERVER_URL=http://staging-eureka:8761/eureka/

# ================================
# JWT Configuration (REQUIRED)
# ================================
JWT_SECRET=<STAGING_JWT_SECRET_MIN_256_BITS>
JWT_EXPIRATION=86400000

# ================================
# Google OAuth2 (REQUIRED)
# ================================
GOOGLE_CLIENT_ID=<STAGING_GOOGLE_CLIENT_ID>
GOOGLE_CLIENT_SECRET=<STAGING_GOOGLE_CLIENT_SECRET>

# ================================
# Message Broker Configuration (REQUIRED)
# ================================
RABBITMQ_HOST=staging-rabbitmq
RABBITMQ_PASSWORD=<STAGING_RABBITMQ_PASSWORD>

# ================================
# Redis Configuration
# ================================
SPRING_REDIS_HOST=staging-redis
SPRING_REDIS_PORT=6379
SPRING_REDIS_PASSWORD=<STAGING_REDIS_PASSWORD>

# ================================
# Kafka Configuration
# ================================
SPRING_KAFKA_BOOTSTRAP_SERVERS=staging-kafka:9092

# ================================
# Razorpay (TEST Mode for Staging)
# ================================
# Use TEST keys, never production keys in staging
RAZORPAY_KEY_ID=rzp_test_<STAGING_TEST_KEY>
RAZORPAY_KEY_SECRET=<STAGING_TEST_SECRET>

# ================================
# Observability (REQUIRED)
# ================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://staging-jaeger:4318/v1/traces
OTEL_TRACES_SAMPLER_ARG=0.5
